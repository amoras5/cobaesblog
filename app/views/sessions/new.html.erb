<% provide(:title, "Sign in") %>
<h1>Iniciar Sesión</h1>
<br>
<div class="row">
  <div class="span6 offset2 form-horizontal">
  	<%= form_for(:session, url: sessions_path) do |f| %>
	  <div class="control-group">
	    <%= f.label :email, class: 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :email, placeholder: 'email' %>
	    </div>
	  </div>
	  <div class="control-group">
	    <%= f.label :contraseña, class: 'control-label' %>
	    <div class="controls">
	      <%= f.password_field :password, placeholder: 'contraseña' %>
	    </div>
	  </div>
	  <div class="control-group">
	  	<div class="controls">
	  	  No recordar mi sesión en este CPU...
	  	  <%= check_box_tag :recordarme, 1, params[:recordarme] %>
	  	  <p><%= link_to "¿Olvidaste tu contraseña?", new_password_reset_path %></p>
	  	</div>
	  </div>
      <div class="control-group">
        <div class="controls">
          <%= f.submit "Iniciar Sesión", class: "btn btn-large btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>  