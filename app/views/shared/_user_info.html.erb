<a href="<%= user_path(current_user) %>">
  <%= image_tag avatarURL(User.find(current_user.id), 'thumb') %>
</a>
<h1><%= current_user.name %></h1>
<span>
  <%= link_to "ver mi perfil", current_user %>
</span>
<span>
  <%= current_user.microposts.count %>
	<% if current_user.microposts.count == 1 %>
	  <%= " mensaje" %>
	<% else %>
	  <%= " mensajes" %>
	<% end %>
</span>