<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= image_tag avatarURL(@user, 'thumb') %>
	  <h1><%= @user.name %></h1>
	  <span><%= link_to "ver mi perfil", @user %></span>
	  <span><b>Mensajes:</b> <%= @user.microposts.count %></span>
	</section>
	<section>
	  <%= render 'shared/stats' %>
	  <% if @users.any? %>
		<div class="user_avatars">
	      <% @users.each do |user| %>
	        <%= image_tag avatarURL(user, 'minithumb') %>
		  <% end %>
		</div>
	  <% end %>
	</section>
  </aside>
  <div class= "span8">
    <h3><%= @title %></h3>
	<% if @users.any? %>
	  <ul class="users">
		<%= render @users %>
	  </ul>
	  <%= will_paginate %>
	<% end %>
  </div>
</div>